{% extends 'FinFinanceBundle::layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-9">
            <h2 class="sub-header">Expense List</h2>
        </div>
        <div class="col-md-3">
            <a href="{{ path('fin_expense_new') }}" class="btn btn-lg btn-default pull-right m-t-15" target="_blank">Create a new entry</a>
        </div>
    </div>   
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Sum</th>
                    <th width="40%">Description</th>
                    <th>Created At</th>
{#                    <th>Updated At</th>#}
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.id }}</td>
                    <td><a href="{{ path('fin_expense_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                    <td>{{ entity.sum }}</td>
                    <td>{{ entity.description }}</td>
                    <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
{#                    <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>#}
                    <td>
                        {%include 'FinFinanceBundle:Common:actions.html.twig' with {'entity': entity} %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% if last_page > 1 %}
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="pagination">
{#                    <span class="previous">
                        <a href="{{ path('fin_expense', { 'page': 1 }) }}">
                          <img src="" alt="First page" title="First page" />
                        </a>
                    </span>#}

                    <span class="previous">
                        <a href="{{ path('fin_expense', { 'page': previous_page }) }}">Previous
{#                          <img src="" alt="Previous page" title="Previous page" />#}
                        </a>
                    </span>

                    {% for page in 1..last_page %}
                      {% if page == current_page %}
                        <span class="page">  
                            <a href="">{{ page }}</a>
                        </span>
                      {% else %}
                        <span class="page">  
                            <a href="{{ path('fin_expense', { 'page': page }) }}">{{ page }}</a>
                        </span>
                      {% endif %}
                    {% endfor %}

                    <span class="previous">
                        <a href="{{ path('fin_expense', { 'page': next_page }) }}">Next
    {#                      <img src="" alt="Next page" title="Next page" />#}
                        </a>
                    </span>

{#                    <a href="{{ path('fin_expense', { 'page': last_page }) }}">
                      <img src="" alt="Last page" title="Last page" />
                    </a>#}
                </div>
            </div>
        </div>
      {% endif %}
{% endblock %}
